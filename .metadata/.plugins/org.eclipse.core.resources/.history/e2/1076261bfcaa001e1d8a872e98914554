	  size_t bytesIn = 0;
	      HAL_SPI_Receive(&hspi1, (uint8_t*)sBuffer, BUFFER_LEN * 2, 1000);

	      mean = 0;
	      for (int i = 0; i < BUFFER_LEN; ++i) {
	        mean += sBuffer[i];
	      }
	      mean /= BUFFER_LEN;
